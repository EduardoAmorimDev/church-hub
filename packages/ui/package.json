{
  "name": "@repo/ui",
  "type": "module",
  "version": "0.0.0",
  "exports": {
    "./components": "./dist/index.js",
    "./styles": "./dist/index.css"
  },
  "scripts": {
    "build:styles": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsup",
    "dev:styles": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsup --watch",
    "dev": "concurrently \"npm run dev:styles\" \"npm run dev:components\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-native": "0.76.9",
    "react-native-css": "^3.0.1",
    "react-native-reanimated": "^4.1.3",
    "react-native-safe-area-context": "^5.6.1",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@storybook/react-native-web-vite": "^10.2.0",
    "@tailwindcss/cli": "^4.1.16",
    "@types/react": "^18.2.14",
    "baseline-browser-mapping": "^2.9.17",
    "concurrently": "^9.2.1",
    "eslint-plugin-storybook": "^10.2.0",
    "react-native-web": "^0.21.2",
    "storybook": "^10.2.0",
    "tsup": "^8.0.1",
    "typescript": "5.5.4",
    "vite": "^7.3.1"
  },
  "files": [
    "dist"
  ],
  "resolutions": {
    "lightningcss": "1.30.1"
  }
}
